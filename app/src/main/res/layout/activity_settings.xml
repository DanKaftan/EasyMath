<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/end_game_background"
    android:layoutDirection="ltr"
    tools:context=".Settings">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="294dp"
        android:layout_height="94dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settings_text" />

    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="230dp"
        android:layout_height="49dp"
        android:background="@drawable/confirm_btn"
        android:clickable="true"
        android:onClick="confimOnClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="361dp"
        android:layout_height="231dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="126dp"
            android:layout_height="58dp"
            android:background="@drawable/difficulty_text"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Spinner
            android:id="@+id/difficulty_spinner"
            style="@style/Widget.AppCompat.DropDownItem.Spinner"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:spinnerMode="dialog" />

        <LinearLayout
            android:layout_width="168dp"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/timer_on_off_background" />

            <Switch
                android:id="@+id/timer_switch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:fontFamily="monospace"
                android:onClick="timerOfOnOnClick"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/timer_tv"
            android:layout_width="99dp"
            android:layout_height="37dp"
            android:background="@drawable/timer_text"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Spinner
            android:id="@+id/spinner"
            style="@style/Widget.AppCompat.DropDownItem.Spinner"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:spinnerMode="dialog" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>