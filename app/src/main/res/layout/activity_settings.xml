<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_end_game_background"
    android:layoutDirection="ltr"
    tools:context=".Settings"
    android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">


    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="230dp"
        android:layout_height="49dp"
        android:background="@drawable/confirm_btn"
        android:clickable="true"
        android:onClick="confimOnClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="361dp"
        android:layout_height="231dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="77dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="129dp"
            android:layout_height="33dp"
            android:background="@drawable/difficulty_text"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Spinner
            android:id="@+id/difficulty_spinner"
            style="@style/Widget.AppCompat.DropDownItem.Spinner"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:spinnerMode="dialog" />

        <LinearLayout
            android:layout_width="191dp"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="141dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/timer_on_off" />

            <Switch
                android:id="@+id/timer_switch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:fontFamily="monospace"
                android:onClick="timerOfOnOnClick"
                android:textAllCaps="true"
                android:textColor="#9C27B0"
                android:textColorHighlight="#A83535"
                android:textColorHint="#AF5252"
                android:textColorLink="#D63838"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/timer_tv"
            android:layout_width="78dp"
            android:layout_height="32dp"
            android:background="@drawable/timer_text"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Spinner
            android:id="@+id/spinner"
            style="@style/Widget.AppCompat.DropDownItem.Spinner"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:spinnerMode="dialog" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>