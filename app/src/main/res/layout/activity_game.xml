<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/class_bacground"
    android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">

    <TextView
        android:id="@+id/tv"
        android:layout_width="231dp"
        android:layout_height="110dp"
        android:fontFamily="casual"
        android:gravity="center_horizontal|center_vertical"
        android:text="5 X 5"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textIsSelectable="true"
        android:textSize="55sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.388" />

    <ImageView
        android:id="@+id/hiv1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/hiv2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toStartOf="@+id/hiv1"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/hiv3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toStartOf="@+id/hiv2"
        app:srcCompat="@drawable/heart" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="61dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline5">

        <Button
            android:id="@+id/home_btn_game"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/home_btn"
            android:onClick="homeBtnOnClick" />

        <Button
            android:id="@+id/game_mute_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/mute_btn"
            android:onClick="muteGameBtnOnClick" />
    </LinearLayout>

    <TextView
        android:id="@+id/timer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/clock"
        android:fontFamily="casual"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="267dp"
        android:layout_height="221dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.363"
        app:srcCompat="@drawable/a" />

    <TextView
        android:id="@+id/tva1"
        android:layout_width="127dp"
        android:layout_height="82dp"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/answer_button"
        android:fontFamily="casual"
        android:gravity="center"
        android:onClick="tva1OnClick"
        android:text="5"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tva3"
        app:layout_constraintEnd_toStartOf="@+id/space"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/space"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tva4"
        android:layout_width="127dp"
        android:layout_height="82dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/answer_button"
        android:fontFamily="casual"
        android:gravity="center"
        android:onClick="tva4OnClick"
        android:text="10"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/space"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/space" />

    <TextView
        android:id="@+id/tva2"
        android:layout_width="127dp"
        android:layout_height="82dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/answer_button"
        android:fontFamily="casual"
        android:gravity="center"
        android:onClick="tva2OnClick"
        android:text="20"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tva4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/space"
        app:layout_constraintTop_toTopOf="@+id/space"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tva3"
        android:layout_width="127dp"
        android:layout_height="82dp"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/answer_button"
        android:fontFamily="casual"
        android:gravity="center"
        android:onClick="tva3OnClick"
        android:text="15"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/space"
        app:layout_constraintEnd_toStartOf="@+id/space"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="165dp"
        android:layout_height="102dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/notebook"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4">

        <TextView
            android:id="@+id/score"
            android:layout_width="153dp"
            android:layout_height="38dp"
            android:fontFamily="serif-monospace"
            android:gravity="center_horizontal"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:text="score: 20"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/level_tv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:text="level: 13"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <Space
        android:id="@+id/space"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/true_ans_tv"
        android:layout_width="205dp"
        android:layout_height="102dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/right_answer_background"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="5 x 5 = 25"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv"
        app:layout_constraintVertical_bias="0.804" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/grid_level_bar"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timer">

    </android.support.v7.widget.GridLayout>

</android.support.constraint.ConstraintLayout>